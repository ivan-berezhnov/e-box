{{ form_start(expenseForm) }}
<div class="row">
    <div class="col-md-9">
        {{ form_row(expenseForm.name) }}
    </div>
    <div class="col-md-3">
        {{ form_row(expenseForm.type, {
            'label': 'Credit'
        }) }}
    </div>

