{% extends 'base.html.twig' %}

{% block title %} {{ page_title }} | eCommerce Box {% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="h4"> {{ page_title }} </h1>

                <table class="table table-striped smart-table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Name</th>
                        <th scope="col">Profit</th>
                        <th scope="col">Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                {% for order in orders %}
                    {% set profit = order.productSale - order.productBuy %}
                    <tr>
                        <th scope="row">{{ order.id }}</th>
                        <td>{{ order.dateCreated|date('Y-m-d') }}</td>
                        <td>{{ order.productName }}</td>
                        <td>{{ profit|number_format(2, ',', '') }}</td>
                        <td>
                            <a href="#" class="edit">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                    </tbody>
                </table>


            </div>
        </div>
    </div>

{% endblock %}
